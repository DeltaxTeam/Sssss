local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 150)
Frame.Position = UDim2.new(0.5, -100, 0.5, -75)
Frame.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
Frame.BorderSizePixel = 2
Frame.BorderColor3 = Color3.fromRGB(100, 100, 100)
Frame.Parent = ScreenGui

local UsernameTextBox = Instance.new("TextBox")
UsernameTextBox.PlaceholderText = "Enter username"
UsernameTextBox.Size = UDim2.new(0.8, 0, 0, 20)
UsernameTextBox.Position = UDim2.new(0.1, 0, 0.1, 0)
UsernameTextBox.TextColor3 = Color3.fromRGB(255, 0, 0) -- Red text color
UsernameTextBox.Parent = Frame

local BanExplanationTextBox = Instance.new("TextBox")
BanExplanationTextBox.PlaceholderText = "Ban explanation"
BanExplanationTextBox.Size = UDim2.new(0.8, 0, 0, 20)
BanExplanationTextBox.Position = UDim2.new(0.1, 0, 0.4, 0)
BanExplanationTextBox.TextColor3 = Color3.fromRGB(255, 0, 0) -- Red text color
BanExplanationTextBox.Parent = Frame

local KickButton = Instance.new("TextButton")
KickButton.Text = "Kick"
KickButton.Size = UDim2.new(0.3, 0, 0, 30)
KickButton.Position = UDim2.new(0.35, 0, 0.7, 0)
KickButton.BackgroundColor3 = Color3.fromHSV(math.random(), 1, 1)
KickButton.TextColor3 = Color3.fromRGB(255, 255, 255)
KickButton.Parent = Frame

KickButton.MouseButton1Click:Connect(function()
    kickPlayer(UsernameTextBox.Text, BanExplanationTextBox.Text)
end)
